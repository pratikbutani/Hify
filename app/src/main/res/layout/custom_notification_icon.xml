		android:id="@+id/badge"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_gravity="end|top"
		android:layout_marginTop="3dp"
		android:layout_marginEnd="-5dp"
		android:background="@drawable/badge_background"
